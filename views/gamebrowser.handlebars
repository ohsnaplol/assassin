<div class="row">
  <div class="col-md-9">
    <h2>Game Browser</h2>
  </div>
  <div class="col-md-3">
    <form action="/create">
      <button class="btn btn-primary">Create Game</button>
    </form>
  </div>
</div>

<div>
  <table class="table">
    <tr>
      <th scope="col">Game Name</th>
      <th scope="col">Location</th>
      <th scope="col">Participants</th>
    </tr>
    {{#each game}}
    {{!-- this href should link to the id the game corresponds to --}}
    {{!-- <a href="/game/id/1">  --}}
      <tr>
        <td><a href="/game/id/{{id}}">{{title}}</a></td>
        <td>{{location}}</td>
        {{!-- <td>{{game.participants}}</tr> --}}
      </tr>
    {{!-- </a> --}}
    {{/each}}
  </table>
</div>